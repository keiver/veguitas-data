{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://veguitas.com/schemas/draft.schema.json",
  "title": "Draft",
  "description": "A content draft before publishing",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier (e.g., 'draft_1704067200000_abc123')",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "description": "Draft title",
      "minLength": 1
    },
    "slug": {
      "type": "string",
      "description": "URL-friendly identifier for when published",
      "pattern": "^[a-z0-9-]+$"
    },
    "status": {
      "type": "string",
      "description": "Current status",
      "enum": ["draft", "published"]
    },
    "categorySlug": {
      "type": "string",
      "description": "Associated category slug",
      "minLength": 1
    },
    "listType": {
      "type": "string",
      "description": "Amazon list type to scrape",
      "enum": ["best-sellers", "movers-and-shakers", "new-releases", "most-wished-for"]
    },
    "productCount": {
      "type": "integer",
      "description": "Number of products to include",
      "minimum": 1,
      "maximum": 100
    },
    "currentVersion": {
      "type": "integer",
      "description": "Latest version number (0 = no content generated yet)",
      "minimum": 0
    },
    "createdAt": {
      "type": "string",
      "description": "ISO 8601 creation timestamp",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "description": "ISO 8601 last update timestamp",
      "format": "date-time"
    }
  },
  "required": ["id", "title", "slug", "status", "categorySlug", "listType", "productCount", "currentVersion", "createdAt", "updatedAt"]
}

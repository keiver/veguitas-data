{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://veguitas.com/schemas/version.schema.json",
  "title": "Version",
  "description": "A generated content version for a draft",
  "type": "object",
  "properties": {
    "version": {
      "type": "integer",
      "description": "Version number",
      "minimum": 1
    },
    "html": {
      "type": "string",
      "description": "Generated HTML content"
    },
    "products": {
      "type": "array",
      "description": "Products included in this version",
      "items": { "$ref": "product.schema.json" }
    },
    "prompt": {
      "type": "string",
      "description": "The prompt used to generate this content"
    },
    "model": {
      "type": "string",
      "description": "AI model used (e.g., 'claude-3-sonnet')"
    },
    "createdAt": {
      "type": "string",
      "description": "ISO 8601 generation timestamp",
      "format": "date-time"
    }
  },
  "required": ["version", "html", "products", "prompt", "model", "createdAt"]
}
